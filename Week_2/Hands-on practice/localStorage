// localStorage stores data even after page reload.

// Example: Save To-Do tasks

let list = JSON.parse(localStorage.getItem("tasks")) || [];

function save(){
  localStorage.setItem("tasks", JSON.stringify(list));
}



// Add tasks to the array:

